<h1> New listing </h1>

<form action='/property/all' method='POST'>
  <label for='title'>
    Title:
    <input type='text' name='title' required/>
  </label>
  <label for='property_type'>
    Property Type:
    <input type='text' name='property_type' required/>
  </label>
  <label for='location'>
    Location:
    <input type='text' name='location'required/>
  </label>
  <label for='bedrooms'>
    Bedrooms:
    <input type='number' name='bedrooms' required/>
  </label>
  <label for='sleeps'>
    Sleeps:
    <input type='number' name='sleeps' required/>
  </label>
  <label for='photo'>
    Photo:
    <input type='text' name='photo'required/>
  </label>
  <label for='price'>
    Price:
    <input type='number' name='price' required/>
  </label>
  <label for='date_available_to'>
    Date Available To:
    <input type='date' name='date_available_to' required />
  </label>
  <label for='date_available_from'>
    Date Available from:
    <input type='date' name='date_available_from' required />
  </label>

  <input type='submit' value='Create listing' />

</form>
