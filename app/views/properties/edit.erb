<h1> Please edit Property Details </h1>

<form action='/property/all' method='POST'>
  <input type="hidden" name="_method" value="patch">
  <label for='title'>
    Title:
    <input type='text' name='title' required/>
  </label>
  <label for='property_type'>
    Property Type:
    <input type='text' name='property_type' required/>
  </label>
  <label for='location'>
    Location:
    <input type='text' name='location'required/>
  </label>
  <label for='bedrooms'>
    Bedrooms:
    <input type='text' name='bedrooms' required/>
  </label>
  <label for='sleeps'>
    Sleeps:
    <input type='text' name='sleeps' required/>
  </label>
  <label for='photo'>
    Photo:
    <input type='text' name='photo'required/>
  </label>
  <label for='price'>
    Price:
    <input type='text' name='price' required/>
  </label>
  <label for='date_available_to'>
    Date Available To (YYYY-MM-DD):
    <input type='text' name='date_available_to' required />
  </label>
  <label for='date_available_from'>
    Date Available from (YYYY-MM-DD):
    <input type='text' name='date_available_from' required />
  </label>
  <input type='submit' value='Confirm Changes' required/>
</form>
